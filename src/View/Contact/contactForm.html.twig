{% extends 'layout.html.twig' %}

{% block title %}
	Contactez-nous -
	{{ parent() }}
{% endblock %}

{% block stylesheet %}
	<link rel="stylesheet" href="/assets/css/contactForm.css">
{% endblock %}

{% block content %}
	<main class="container">
		<div class="background-line"></div>
		<section class="main-title">
			<div class="title-content">
				<div class="bloc-square"></div>
				<h3>
					<span>Nous</span><br/>contacter</h3>
			</div>
			<div class="second-title">
				<div class="bloc-rectangle"></div>
				<h4>Besoin d'un renseignement ?</h4>
			</div>
		</div>
		<div class="formPage">
			<div class="logoContact">
				<img src="/assets/images/logo-contact.png" alt="Logo contact"/>
			</div>
			<form action="/" method="post" class="form">
				<div class="nameFlex">
					<div>
						<label for="lastname">Nom</label>
						<input type="text" name="lastname" id="lastname" required/>
						<div class="error">
							{% if errors.lastname is not empty %}
								{{ errors.lastname }}
							{% endif %}
						</div>
					</div>
					<div>
						<label for="firstname">Prénom</label>
						<input type="text" name="firstname" id="firstname" required/>
						<div class="error">
							{% if errors.firstname is not empty %}
								{{ errors.firstname }}
							{% endif %}
						</div>
					</div>
				</div>
				<div>
					<label for="email">E-mail</label>
					<input type="text" name="email" id="email" required/>
					<div class="error">
						{% if errors.email is not empty %}
							{{ errors.email }}
						{% endif %}
					</div>
				</div>
				<div>
					<label for="phone">Téléphone (facultatif)</label>
					<input type="number" name="phone" id="phone"/>
				</div>
				<br>
				<div>
					<label for="about">Sujet</label>
					<select name="about" id="about" placeholder="Type de demande">
						{% for option in options %}
							<option></option>
						{{ option }}
					</option>
				{% endfor %}
			</select>
			<div class="error">
				{% if errors.about is not empty %}
					{{ errors.about }}
				{% endif %}
			</div>
		</div>
		<br>
		<div>
			<label for="message">Votre Message</label>
			<textarea id="message" name="message" id="message" required></textarea>
			<div class="error">
				{% if errors.message is not empty %}
					{{ errors.message }}
				{% endif %}
			</div>
		</div>
		<button>Contactez-nous</button>
	</form>
</div></main>{% endblock %}
