{% extends 'layout.html.twig' %}

{% block title %}
	Admin - Nos Formations -
	{{ parent() }}
{% endblock %}

{% block stylesheet %}
	<link rel="stylesheet" href="/assets/css/Admin/training/admin-training.css">
{% endblock %}

{% block content %}
	<main class="container">

		<div class="background-line"></div>

		<section class="training">
			<div class="main-title">
				<div class="title-content">
					<div class="bloc-square"></div>
					<h3>
						<span>Administration</span><br/>de nos formations
					</h3>
				</div>
			</div>

			<div class="grid">
				{% for training in trainings %}
					<div class="admin-card">
						<div>
							<img src="{{ training.image ? '/uploads/training/' ~ training.image : 'assets/images/default_placeholder.jpg'}}" alt="Photo de la formation"/>
						</div>
						<div class="content">
							<h5>{{ training.degree_name ~ " " ~ training.training_name }}</h5>
							{% for sector in sectors %}
								{% if sector.name == training.sector_name %}
									<p>{{ sector.name }}</p>
								{% endif %}
							{% endfor %}
							<p>Durée de la formation :
								{{ training.degree_duration }}
								ans</p>
							<p>Durée du stage :
								{{ training.stage_duration }}
								mois
							</p>
							<h6>Description</h6>
							<div class="content-overflow">
								<p>
									{{ training.description }}
								</p>
							</div>
							<h6>Programme</h6>
							<div class="content-overflow">
								<p>
									{{ training.description }}
								</p>
							</div>
							<h6>Compétences</h6>
							<div>
								<ul>
									<li>La liste</li>
								</ul>
							</div>
							{# <ul>
																																																																																																																															<li>
																																																																																																																																<p>Secteur</p>
																																																																																																																															</li>
