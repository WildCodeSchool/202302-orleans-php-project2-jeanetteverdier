{% extends 'layout.html.twig' %}

{% block title %}
	Admin - Ajouter une Formation -
	{{ parent() }}
{% endblock %}

{% block stylesheet %}
	<link rel="stylesheet" href="/assets/css/Admin/training/admin-add-training.css">
{% endblock %}

{% block content %}
	<main class="container">

		<div class="background-line"></div>

		<section>
			<div class="main-title">
				<div class="title-content">
					<div class="bloc-square"></div>
					<h3>
						<span>Ajouter</span><br/>une formation
					</h3>
				</div>
			</div>
			<ul>
				{% for error in errors %}
					<li>
						{{ error }}
					</li>
				{% endfor %}
			</ul>
			<div class="content">
				<form action="" method="POST">
					<fieldset>
						<legend>
							<p>Niveau d'étude</p>
						</legend>
						<div class="form-box">
							<div class="radio-degree">
								<label>
									<input type="radio" id="degree" name="degree_name">
									CAP
								</label>
								<label>
									<input type="radio" id="degree" name="degree_name">
									BAC
								</label>

								<div>
									<label for="nb-students">Durée de la formation</label>
									<input type="number" id="nb-students" name="nb_students" min="O" required value="{{ training.nb_students }}">
								</div>
							</div>

							<a href="#" role="button"></a>

						</div>
					</fieldset>

					<fieldset>
						<legend>
							<p>Formation</p>
						</legend>
						<div class="form-box">
							<label for="name">Nom de la formation</label>
							<input type="text" id="name" name="training_name" maxlength="255" required value="{{ training.name }}">

							<div class="int-box">
								<div>
									<label for="nb-students">Durée de la formation</label>
									<input type="number" id="nb-students" name="nb_students" min="O" required value="{{ training.nb_students }}">
								</div>
								<div>
									<label for="success-rate">Taux de réussite</label>
									<input type="number" id="success-rate" name="success_rate" min="O" required value="{{ training.success_rate }}">
								</div>
								<div>
									<label for="stage-duration">Nombre d'élèves</label>
									<input type="number" id="stage-duration" name="stage_duration" min="O" required value="{{ training.stage_duration }}">
								</div>
								<div>
									<label for="stage-duration">Durée du stage</label>
									<input type="number" id="stage-duration" name="stage_duration" min="O" required value="{{ training.stage_duration }}">
								</div>
							</div>


							<label for="description">Description</label>
							<textarea id="description" name="description" placeholder="Décrivez la formation" value="{{ training.description }}"></textarea>

							<label for="program">Programme</label>
							<textarea id="program" name="program" placeholder="Décrivez le programme de la formation" value="{{ training.program }}"></textarea>

							<details role="list">
								<summary aria-haspopup="listbox">Sélectionner les compétences</summary>
								<ul role="listbox">
									<li>
										<label>
											<input type="radio" id="sector" name="sector_name">
											BAC
										</label>
									</li>
									<li>
										<label>
											<input type="radio" id="sector" name="sector_name">
											BAC
										</label>
									</li>
									<li>
										<label>
											<input type="radio" id="sector" name="sector_name">
											BAC
										</label>
									</li>
								</ul>
							</details>
							<label for="file">Sélectionnez un fichier :</label>
							<input type="file" id="file" name="file">
						</div>
					</fieldset>

					<fieldset>
						<legend>
							<p>Poursuite d'étude</p>
						</legend>
						<div class="form-box">
							<p>Choix mutiple</p>
							<details role="list">
								<summary aria-haspopup="listbox">Sélectionner les formations</summary>
								<ul role="listbox">
									<li>
										<label>
											<input type="radio" id="sector" name="sector_name">
											BAC
										</label>
									</li>
									<li>
										<label>
											<input type="radio" id="sector" name="sector_name">
											BAC
										</label>
									</li>
									<li>
										<label>
											<input type="radio" id="sector" name="sector_name">
											BAC
										</label>
									</li>
								</ul>
							</details>
						</fieldset>
						<div class="form-btn">
							<button>Ajouter</button>
							<button>Annuler</button>
						</div>
					</form>
				</div>
			</div>
		</section>
		<a href="/admin/formations">Retour</a>
	</main>
{% endblock %}
