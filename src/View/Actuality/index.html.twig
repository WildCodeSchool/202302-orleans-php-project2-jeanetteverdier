{% extends 'layout.html.twig' %}

{% block stylesheet %}
	<link rel="stylesheet" href="/assets/css/index-training.css">
{% endblock %}

{% block title %}Formations -
	{{ parent() }}
{% endblock %}

{% block content %}
	<main class="container">

		<div class="background-line"></div>

		<section class="training">
			<div class="main-title">
				<div class="title-content">
					<div class="bloc-square"></div>
					<h3>
						<span>Découvrez</span><br/>nos actualités
					</h3>
				</div>
			</div>

			<div class="training-articles">
					{% for actuality in actualities %}
							<article class="training-card">
								<div class="training-content">
									<div class="blue-rectangle"></div>
									<h4>
										{{ actuality.title }}
									</h4>
									<div class="orange-rectangle"></div>
									<p>
										{{ actuality.content }}
									</p>
									<a href="#" role="button">En savoir plus</a>
							</div>

							<div class="training-image">
								<img src="{{ actuality.image ? 'uploads/actuality/' ~ actuality.image : 'assets/images/default_placeholder.jpg'}}" alt="Photo de la formation"/>
							</div>
						</article>
				{% endfor %}
		</div>
	</section>
</main>
{% endblock %}
